<% include partials/head.ejs %>
<div class="row">
    <!-- User Detail -->
    <div class="col-md-4">
        <h2 class="text-center">User Info</h2>
        <h3>Name: <%=user.google.name%></h3>
        <h3>Email: <%=user.google.email%></h3>
    </div>

    <div class="col-md-6">
        <h2>My Polls</h2>

        <%for(var i=0; i<user.polls.length; i++){%>

        <div class="panel panel-default">
            <table class="table table-hover">
                <tbody>
                <tr>
                    <td>
                        <span class="glyphicon glyphicon-file"></span>
                        <%=user.polls[i].title%>
                    </td>
                    <td class="text-right text-nowrap">
                        <a href="/poll/polldetail/<%=user.polls[i]._id%>" class="btn btn btn-info">Check</a>
                        <a href="/poll/polldelete/<%=user.polls[i]._id%>" class="btn btn btn-danger">
                            <span class="glyphicon glyphicon-trash">Delete</span>
                        </a>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
        <%}%>

    </div>
</div>
<% include partials/tail.ejs %>